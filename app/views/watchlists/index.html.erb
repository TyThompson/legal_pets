<html>
<body>

 <h2>
   Watchlists
   <span class="badge" id="watchlist-count"> <%= @watchlists.count %></span>
 </h2>

 <table class="table table-hover table-striped table-condensed">
   <thead>
     <tr>
       <th>Species</th>
       <th>User ID</th>
       <th>Price</th>
       <th></th>
     </tr>
   </thead>
   <tbody  id="current-watchlists">
     <% @watchlists.each do |w| %>
    <tr>
      <th> <%= w.species %></th>
      <th> <%= w.user.email.split('@').first %></th>
      <th>$<%= w.price %></th>
      <% if current_user == w.user %>
      <th><%= button_to 'Delete', watchlist_path(id: w.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-xs"  %></th>
      <% end %>
    </tr>
      <% end %>
   </tbody>
 </table>

 <%= button_to "New watchlist", new_watchlist_path, class: "btn btn-success btn-xs", method: "get" %>

</body>
</html>
