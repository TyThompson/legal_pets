<html>
<body>

 <h2>
   You just updated this watchlist
 </h2>

 <table class="table table-hover table-striped table-condensed">
   <thead>
     <tr>
       <th>Species</th>
       <th>User ID</th>
       <th>Price</th>
     </tr>
   </thead>
   <tbody  id="current-watchlists">
    <tr>
      <th> <%= @watchlist.species %></th>
      <th> <%= @watchlist.user.email.split('@').first %></th>
      <th> <%= number_to_currency(@watchlist.price, :unit => "$") %></th>
    </tr>
   </tbody>
 </table>
<table>
  <% if policy(:user).edit? %>
    <th><%= button_to 'Edit Again', :back, method: :get, class: "btn btn-success btn-xs" %></th>
  <% end %>
  <th><%= button_to "Watchlists", watchlists_path, method: :get, class: "btn btn-success btn-xs" %></th>
</table>
</body>
</html>
