<html>
<body>

 <h2>
   Pet listings
   <span class="badge" id="pet-count"> <%= @pets.count %></span>
 </h2>

 <table class="table table-hover table-striped table-condensed">
   <thead>
     <tr>
       <th>Species</th>
       <th>Common Name</th>
       <th>Seller</th>
       <th>Price</th>
       <th>Description</th>
       <th></th>
     </tr>
   </thead>
   <tbody  id="current-pets">
     <% @pets.each do |p| %>
        <tr>
          <th> <%= p.species %></th>
          <th> <%= p.common_name %></th>
          <th> <%= p.seller.email.split('@').first %></th>
          <th>$<%= p.price %></th>
          <th> <%= p.description %></th>
          <% if policy(p).show? %>
            <th><%= button_to "Show", pet_path(id: p.id), class: "btn btn-success btn-xs", method: "get" %></th>
          <% end %>
        </tr>
      <% end %>


   </tbody>
 </table>

</body>
</html>
